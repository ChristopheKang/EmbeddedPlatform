<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="NEWS"
        android:textSize="30sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10px"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/show_popup"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    app:srcCompat="@drawable/women_yoga"
                    android:onClick="displayArticle" />

                <TextView
                    android:id="@+id/textViewNews"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:text="New Yoga class on Monday Night!"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    app:srcCompat="@drawable/weights" />

                <TextView
                    android:id="@+id/textViewNews2"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:text="Monthly Gym Report"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    app:srcCompat="@drawable/bath_towels" />

                <TextView
                    android:id="@+id/textViewNews3"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:text="Security and Hygiene in the gym"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar" />

                <TextView
                    android:id="@+id/textViewNews4"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:text="Some other news"
                    android:textSize="18sp" />

            </LinearLayout>

    </FrameLayout>


</LinearLayout>